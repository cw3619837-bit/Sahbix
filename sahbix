<main>
    <div class="header">
        <div class="search-box">
            <input type="text" id="userInput" placeholder="Search..." onkeydown="if(event.key==='Enter') fetchVideos()">
            <button class="search-btn" onclick="fetchVideos()">üîç</button>
        </div>
    </div>

    <div id="video-display"></div>

    <h2 id="section-title">Recommended</h2>
    <div id="results-list"></div>
</main>

<script>
    const API_KEY = 'AIzaSyD1cXDB8ql-QReLo5WGEo-DXGBrdtPshIA'; 
    let currentVideoId = '';
    let history = JSON.parse(localStorage.getItem('yt_history')) || [];

    async function fetchVideos(isShorts = false) {
        const query = document.getElementById('userInput').value || (isShorts ? '#shorts' : 'New Technology');
        const searchUrl = `https://www.googleapis.com/youtube/v3/search?part=snippet&maxResults=15&q=${encodeURIComponent(query)}&type=video&videoDuration=${isShorts ? 'short' : 'any'}&key=${API_KEY}`;
        
        try {
            const response = await fetch(searchUrl);
            const data = await response.json();
            renderResults(data.items, isShorts);
            document.getElementById('section-title').innerText = isShorts ? "Shorts" : "Search Results";
        } catch (err) { console.error("API Error"); }
    }

    function renderResults(videos, isShorts = false, isHistory = false) {
        const container = document.getElementById('results-list');
        container.innerHTML = ''; 
        container.className = isShorts ? 'shorts-grid' : '';

        videos.forEach((item, index) => {
            const videoId = isHistory ? item.id : item.id.videoId;
            const title = isHistory ? item.title : item.snippet.title;
            const thumb = isHistory ? item.thumb : item.snippet.thumbnails.medium.url;
            const channel = isHistory ? item.channel : item.snippet.channelTitle;

            const div = document.createElement('div');
            div.className = 'video-item';
            div.onclick = () => loadVideo(videoId, title, thumb, channel);
            
            let deleteHtml = isHistory ? `<button class="delete-btn" onclick="event.stopPropagation(); deleteFromHistory('${videoId}')">‚úï</button>` : '';
            
            div.innerHTML = `
                ${deleteHtml}
                <img src="${thumb}" style="${isShorts ? 'aspect-ratio: 9/16; object-fit: cover;' : ''}">
                <h3>${title}</h3>
                <p>${channel}</p>
            `;
            container.appendChild(div);
        });
    }

    function loadVideo(id, title, thumb, channel) {
        currentVideoId = id;
        const server = document.getElementById('serverSelect').value;
        const display = document.getElementById('video-display');
        display.style.display = 'block';
        display.innerHTML = `<iframe src="https://${server}/embed/${id}?autoplay=1" allowfullscreen></iframe>`;
        addToHistory({id, title, thumb, channel});
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    function addToHistory(video) {
        history = history.filter(v => v.id !== video.id);
        history.unshift(video);
        localStorage.setItem('yt_history', JSON.stringify(history));
    }

    function deleteFromHistory(id) {
        history = history.filter(v => v.id !== id);
        localStorage.setItem('yt_history', JSON.stringify(history));
        showSection('history'); // Refresh view
    }

    function showSection(type) {
        document.getElementById('video-display').style.display = 'none';
        if(type === 'history') {
            document.getElementById('section-title').innerText = "Your Watch History";
            renderResults(history, false, true);
        } else if (type === 'home') {
            fetchVideos(false);
        } else if (type === 'shorts') {
            fetchVideos(true);
        }
    }

    window.onload = () => fetchVideos();
</script>
</body>
